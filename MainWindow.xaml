<Window x:Class="CalculatorWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWpfApp"
        Title="Калькулятор"
        Height="500" Width="400">
    <Window.Resources>
        <Style x:Key="DigitButton" TargetType="Button">
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="Margin" Value="6"/>
        </Style>
        <Style x:Key="SignButton" TargetType="Button">
            <Setter Property="Background" Value="DimGray"/>
            <Setter Property="Margin" Value="6"/>
        </Style>
        <Style x:Key="ResetButton" TargetType="Button">
            <Setter Property="Background" Value="DarkRed"/>
            <Setter Property="Margin" Value="6"/>
        </Style>
        <Style x:Key="TextDigitButton" TargetType="TextBlock">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="TextSignButton" TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="40"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        <Style x:Key="RectangleStyle" TargetType="Rectangle">
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="Fill" Value="Transparent"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="Margin" Value="8, 5, 8, 5"/>
        </Style>
        <Style x:Key="TextLabelSryle" TargetType="Label">
            <Setter Property="TextBlock.FontSize" Value="40"/>
            <Setter Property="TextBlock.FontWeight" Value="Bold"/>
            <Setter Property="TextBlock.Margin" Value="9,1,9,1"/>
            <Setter Property="TextBlock.HorizontalAlignment" Value="Right"/>
            <Setter Property="TextBlock.VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Rectangle Grid.Row="0" 
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   Style="{StaticResource RectangleStyle}">            
        </Rectangle>
        <Label x:Name="resultLabel"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4"
               Style="{StaticResource TextLabelSryle}">
        </Label>
        <Button x:Name="digitSevenButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="1"
                Grid.Column="0"
                Click="DigitSevenButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitSevenTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="7">
            </TextBlock>
        </Button>
        <Button x:Name="digitEightButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="1"
                Grid.Column="1"
                Click="DigitEightButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitEightTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="8">
            </TextBlock>
        </Button>
        <Button x:Name="digitNineButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="1"
                Grid.Column="2"
                Click="DigitNineButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitNineTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="9">
            </TextBlock>
        </Button>
        <Button x:Name="sumTextButton"
                Style="{StaticResource SignButton}"
                Grid.Row="1"
                Grid.Column="3"
                Click="SumTextButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="sumTextBlock"
                       Style="{StaticResource TextSignButton}"
                       Text="+">
            </TextBlock>
        </Button>
        <Button x:Name="digitFourButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="2"
                Grid.Column="0"
                Click="DigitFourButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitFourTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="4">
            </TextBlock>
        </Button>
        <Button x:Name="digitFiveButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="2"
                Grid.Column="1"
                Click="DigitFiveButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitFiveTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="5">
            </TextBlock>
        </Button>
        <Button x:Name="digitSixButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="2"
                Grid.Column="2"
                Click="DigitSixButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitSixTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="6">
            </TextBlock>
        </Button>
        <Button x:Name="subtractButton"
                Style="{StaticResource SignButton}"
                Grid.Row="2"
                Grid.Column="3"
                Click="SubtractButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="subtractTextBlock"
                       Style="{StaticResource TextSignButton}"
                       Text="-">
            </TextBlock>
        </Button>
        <Button x:Name="digitOneButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="3"
                Grid.Column="0"
                Click="DigitOneButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitOneTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="1">
            </TextBlock>
        </Button>
        <Button x:Name="digitTwoButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="3"
                Grid.Column="1"
                Click="DigitTwoButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitTwoTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="2">
            </TextBlock>
        </Button>
        <Button x:Name="digitThreeButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="3"
                Grid.Column="2"
                Click="DigitThreeButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitThreeTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="3">
            </TextBlock>
        </Button>
        <Button x:Name="multiplyButton"
                Style="{StaticResource SignButton}"
                Grid.Row="3"
                Grid.Column="3"
                Click="MultiplyButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="multiplyTextBlock"
                       Style="{StaticResource TextSignButton}"
                       Text="x">
            </TextBlock>
        </Button>
        <Button x:Name="resetButton"
                Style="{StaticResource ResetButton}"
                Grid.Row="4"
                Grid.Column="0"
                Click="ResetButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="resetTextBlock"
                       Style="{StaticResource TextSignButton}"
                       Text="C">
            </TextBlock>
        </Button>
        <Button x:Name="digitZeroButton"
                Style="{StaticResource DigitButton}"
                Grid.Row="4"
                Grid.Column="1"
                Click="DigitZeroButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="digitZeroTextBlock"
                       Style="{StaticResource TextDigitButton}"
                       Text="0">
            </TextBlock>
        </Button>
        <Button x:Name="equalsButton"
                Style="{StaticResource SignButton}"
                Grid.Row="4"
                Grid.Column="2"
                Click="ResultButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="equalsTextBlock"
                       Style="{StaticResource TextSignButton}"
                       Text="=">
            </TextBlock>
        </Button>
        <Button x:Name="divideButton"
                Style="{StaticResource SignButton}"
                Grid.Row="4"
                Grid.Column="3"
                Click="DivideButton_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
            <TextBlock x:Name="divideTextBlock"
                       Style="{StaticResource TextSignButton}"
                       Text="/">
            </TextBlock>
        </Button>
    </Grid>
</Window>
