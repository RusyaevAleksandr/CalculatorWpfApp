<Window x:Class="CalculatorWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" mc:Ignorable="d"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CalculatorWpfApp"        
        Title="MainWindow" 
        Height="500" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label x:Name="Result"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="4">             
        </Label>
        <TextBlock x:Name="DigitSeven"
                   Text="7"
                   Grid.Row="1"
                   Grid.Column="0">            
        </TextBlock>
        <TextBlock x:Name="DigitEight"
                   Text="8"
                   Grid.Row="1"
                   Grid.Column="1"> 
        </TextBlock>
        <TextBlock x:Name="DigitNine"
                   Text="9"
                   Grid.Row="1"
                   Grid.Column="2"> 
        </TextBlock>
        <TextBlock x:Name="DigitAdd"
                   Text="+"
                   Grid.Row="1"
                   Grid.Column="3"> 
        </TextBlock>
        <TextBlock x:Name="DigitFour"
                   Text="4"
                   Grid.Row="2"
                   Grid.Column="0"> 
        </TextBlock>
        <TextBlock x:Name="DigitFive"
                   Text="5"
                   Grid.Row="2"
                   Grid.Column="1"> 
        </TextBlock>
        <TextBlock x:Name="DigitSix"
                   Text="6"
                   Grid.Row="2"
                   Grid.Column="2"> 
        </TextBlock>
        <TextBlock x:Name="DigitSubtract"
                   Text="-"
                   Grid.Row="2"
                   Grid.Column="3"> 
        </TextBlock>
        <TextBlock x:Name="DigitOne"
                   Text="1"
                   Grid.Row="3"
                   Grid.Column="0"> 
        </TextBlock>
        <TextBlock x:Name="DigitTwo"
                   Text="2"
                   Grid.Row="3"
                   Grid.Column="1"> 
        </TextBlock>
        <TextBlock x:Name="DigitThree"
                   Text="3"
                   Grid.Row="3"
                   Grid.Column="2"> 
        </TextBlock>
        <TextBlock x:Name="DigitMultiply"
                   Text="x"
                   Grid.Row="3"
                   Grid.Column="3"> 
        </TextBlock>
        <TextBlock x:Name="DigitReset"
                   Text="C"
                   Grid.Row="4"
                   Grid.Column="0"> 
        </TextBlock>
        <TextBlock x:Name="DigitZero"
                   Text="0"
                   Grid.Row="4"
                   Grid.Column="1"> 
        </TextBlock>
        <TextBlock x:Name="DigitEquals"
                   Text="="
                   Grid.Row="4"
                   Grid.Column="2"> 
        </TextBlock>
        <TextBlock x:Name="DigitDivide"
                   Text="/"
                   Grid.Row="4"
                   Grid.Column="3"> 
        </TextBlock>
    </Grid>
</Window>
